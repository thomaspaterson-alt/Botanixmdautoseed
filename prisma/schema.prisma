generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id                    String   @id @default(cuid())
  slug                  String   @unique
  name                  String
  description           String
  benefit               String
  priceCents            Int
  imageUrl              String?
  subscriptionEligible  Boolean  @default(false)
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}
